<table cellspacing="0" cellpadding="0" border="0" class="babsTable">
	<tr>
		<td class="babsHeader">
			<a href="$story_uri">
				$headline</a></td>
	</tr>
	<tr>
		<td class="babsData1">
			<span class="babsInfo">
				Posted by <a href="$profile_uri">$author</a>
				on $date</span></td>
	</tr>
	<tr>
		<td class="babsData2">
			$overview</td>
	</tr>
	<tr>
		<td class="babsFooter">
			<a href="$story_uri">More Details</a>
			<span class="babsInfo">
			($num_comments comment(s),
			 $num_words words(s) in story)</span></td>
	</tr>
</table>
